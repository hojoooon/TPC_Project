<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous"> -->
    <%- include('link') %>
    <script src="https://kit.fontawesome.com/72c2a49ef4.js" crossorigin="anonymous"></script>
    <link href="/public/css/cookiesCompare.css" rel="stylesheet">
</head>
<body>
  <%- include('topnav')%>
  <%- include('subnav')%>
  <input type="hidden" id="cookiesDataList" value="<%= JSON.stringify(data) %>">
  <input type="hidden" id="previousCookieData">
  <input type="hidden" id="nextCookieData">
  <div class="datafield">
    <div class="domainInform">
      <h4 class="domainTitle"><%= JSON.stringify(data[0].domainTitle).replace(/\"/gi, "") %></h4>
      <a href=<%= data.url %>>
        <h4 class="domainUrl"><%= JSON.stringify(data[0].url).replace(/\"/gi, "").slice(0, -1) %></h4>
      </a>
    </div>
    <div class="cookieDataField">
      <div class="previousCookie">
        <div class="inform previousInform">
          <div class="dropBox">
            <form>
              <select name="previousMonth" id="previousMonth" onchange="changePreviousMonth()">
                <option selected>PreviousMonth</option>
                <% for(let i=0; i < data.length; i++) { %>
                  <option value=<%= data[i].updatedDate %>>
                    <%= JSON.stringify(data[i].updatedAt).slice(0,8).replace(/\"/gi, "") %>
                  </option>
                <% } %>
              </select>
            </form>
          </div>
          <div class="detail">
            <h6 class="count" id="prevCookieCount">Cookie: 0</h6>
            <h6 id="disappeared">Disappeared: 0</h6>
          </div>
        </div>
        <div class="tableField" id="previousTableField">
          <table id="previousTable">
            <thead>
              <tr class="tr" id="prevTr">
                <th>ID</th>
                <th id="name" onclick="sortPrevBy(this.id);">name</th>
                <th id="connTLD" onclick="sortPrevBy(this.id)">connTLD<i class="fas fa-caret-down" style="padding-left: 4px;"></i></th>
                <th id="publisher" onclick="sortPrevBy(this.id)">publisher</th>
                <th id="type" onclick="sortPrevBy(this.id)">type</th>
              </tr>
            </thead>
            <tbody id="previousTbody">
            </tbody>
          </table>
        </div>
      </div>
      <div class="nextCookie">
        <div class="inform nextInform">
          <div class="dropBox">
            <form>
              <select name="nextMonth" id="nextMonth" onchange="changeNextMonth()">
                <option selected>NextMonth</option>
                <% for(let i=0; i < data.length; i++) { %>
                  <option value=<%= data[i].updatedDate %>>
                    <%= JSON.stringify(data[i].updatedAt).slice(0,8).replace(/\"/gi, "") %>
                  </option>
                <% } %>
              </select>
            </form>
          </div>
          <div class="detail">
            <h6 class="count" id="nextCookieCount">Cookie: 0</h6>
            <h6 id="appeared">Appeared: 0</h6>
          </div>
        </div>
        <div class="tableField" id="nextTableField">
          <table id="nextTable">
            <thead>
              <tr class="tr" id="nextTr">
                <th>ID</th>
                <th id="name" onclick="sortNextBy(this.id)">name</th>
                <th id="connTLD" onclick="sortNextBy(this.id)">connTLD<i class="fas fa-caret-down" style="padding-left: 4px;"></i></th>
                <th id="publisher" onclick="sortNextBy(this.id)">publisher</th>
                <th id="type" onclick="sortNextBy(this.id)">type</th>
              </tr>
            </thead>
            <tbody id="nextTbody">
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <script src="/public/js/cookiesCompare.js"></script>
</body>
</html>
